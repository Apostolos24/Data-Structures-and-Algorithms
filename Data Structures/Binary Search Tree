//
//
//        int height = tree.height();
//
//        for(int i = 0; i < height; ++i) {
//            for (int j = 0; j < height - 1 - i; ++j) out << " ";
//
//            for(int k = 0; k < i + 1; ++k) {
//                if(array[index] != tree.null) out << array[index];
//                else out << " ";
//                out << " ";
//
//                ++index;
//            }
//
//            for(int j = 0; j < height -1 - i; ++j) out << " ";
//
//            out << std::endl;
//        }
//
//        return out;
    }


};
